-- Enable DBMS_OUTPUT to see messages
SET SERVEROUTPUT ON;

-- Declare variables for user input
DEFINE principal = '';
DEFINE acl_name = '';

-- Prompt for input
PROMPT Enter Principal (user or role):
ACCEPT principal CHAR
PROMPT Enter ACL Name (e.g., my_acl.xml):
ACCEPT acl_name CHAR

-- Add connect privilege to the specified ACL with is_grant defaulting to TRUE
BEGIN
    DBMS_NETWORK_ACL_ADMIN.ADD_PRIVILEGE(
        acl       => '&acl_name',
        principal => '&principal',
        is_grant  => TRUE,
        privilege => 'connect'
    );
    DBMS_OUTPUT.PUT_LINE('Privilege connect granted successfully for ' || '&principal' || ' on ACL ' || '&acl_name');
EXCEPTION
    WHEN OTHERS THEN
        DBMS_OUTPUT.PUT_LINE('Error: ' || SQLERRM);
END;
/